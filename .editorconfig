# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.yml]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false
